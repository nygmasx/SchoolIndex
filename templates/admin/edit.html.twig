{# templates/admin/edit.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Modifier Utilisateur{% endblock %}

{% block body %}
<div class="flex justify-center items-center min-h-screen">
    <div class="p-4 w-full max-w-md">
        <h1 class="text-2xl font-bold mb-4">Modifier Utilisateur</h1>
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
            {% for field in form %}
                {% if field.vars.name != '_token' %} {# Exclut le champ '_token' du rendu #}
                    <div class="flex flex-col mb-4">
                        {{ form_label(field, null, {'label_attr': {'class': 'mb-2 font-semibold text-lg text-gray-700'}}) }}
                        {% if field.vars.name == 'roles' %}
                            {{ form_widget(field, {'attr': {'class': 'form-select block w-full mt-1 border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 text-gray-700'}}) }}
                        {% else %}
                            {{ form_widget(field, {'attr': {'class': 'form-input block w-full mt-1 border border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50'}}) }}
                        {% endif %}
                        {{ form_errors(field, {'attr': {'class': 'text-red-500'}}) }}
                    </div>
                {% endif %}
            {% endfor %}
            <button class="px-4 py-2 text-white font-bold rounded bg-customGreen hover:bg-darkGreen">
                Sauvegarder
            </button>
        {{ form_end(form) }}

        <div class="mt-3">
            <a href="{{ path('app_admin') }}" class="text-blue-500 hover:text-blue-800">Retour Ã  la liste</a>
        </div>
    </div>
</div>
{% endblock %}