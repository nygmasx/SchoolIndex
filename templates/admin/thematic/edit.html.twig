{% extends 'base.html.twig' %}

{% block title %}Page d'administration{% endblock %}

{% block main %}
<div class="bg-slate-200 flex flex-col min-h-[95vh]">
	<h1 class="text-2xl	 md:text-4xl font-medium text-center max-sm:pt-4 lg:text-start text-blue-900 pt-12 px-6 pb-4">Administration</h1>

		<div class="flex gap-3 min-md:ml-10 max-sm:ml-1 ml-[18px] mt-4 max-sm:hidden">
			<a href="{{ path('app_contributor') }}" class="bg-customBlue rounded-tl-xl rounded-tr-xl px-5 py-2.5 opacity-[0.8] flex justify-center transition duration-200 hover:opacity-100">
				<span class="justify-center items-center flex text-white font-noto">Contributeurs</span>
			</a>
			<a href="#" class="bg-customBlue rounded-tl-xl rounded-tr-xl px-5 py-2.5 flex justify-center opacity-[0.8] transition duration-200 hover:opacity-100">
				<span class="justify-center items-center flex text-white font-noto">Exercices</span>
			</a>
			<a href="{{ path('app_course') }}" class="bg-customBlue rounded-tl-xl rounded-tr-xl px-5 py-2.5 flex opacity-[0.8] justify-center transition duration-200 hover:opacity-100">
				<span class="justify-center items-center flex text-white font-noto">Matières</span>
			</a>
			<a href="{{ path('app_classroom') }}" class="bg-customBlue rounded-tl-xl px-5 py-2.5 rounded-tr-xl flex justify-center opacity-[0.8] transition duration-200 hover:opacity-100">
				<span class="justify-center items-center flex text-white font-noto">Classes</span>
			</a>
			<a href="{{ path('app_thematic') }}" class="bg-customBlue rounded-tl-xl rounded-tr-xl px-14 py-2.5 flex justify-center transition duration-200 hover:opacity-100">
				<span class="justify-center items-center flex text-white font-noto">Thématiques</span>
			</a>
			<a href="{{ path('app_skill') }}" class="bg-customBlue rounded-tl-xl rounded-tr-xl px-5 py-2.5 opacity-80 flex justify-center transition duration-200 hover:opacity-100">
				<span class="justify-center items-center flex text-white font-noto" href="">Compétences</span>
			</a>
			<a href="{{ path('app_origin') }}" class="bg-customBlue rounded-tl-xl px-5 py-2.5 rounded-tr-xl flex opacity-80 justify-center  transition duration-200 hover:opacity-100">
				<span class="justify-center items-center flex text-white font-noto">Origines</span>
			</a>
		</div>


    <div class="w-[95%] md:ml-[30px] min-md:w-[100%] min-md:ml-10 rounded-lg sm:flex sm:flex-col justify-center bg-white max-sm:w-[100%] ">
        <h1 class="ml-7 text-[20px] font-semibold font-noto md:pt-6 max-sm:mt-[5px]">Modifier Utilisateur</h1>

        <div class="w-[95%] md:ml-[30px] min-md:w-[100%] min-md:ml-10 rounded-lg sm:flex sm:flex-col justify-center bg-white max-sm:w-[100%] ">
            <div class="flex max-sm:pt-2 w-full">
                <!-- Formulaire -->
                <div class="mx-7 mt-6 w-full">
                    {{ form_start(form) }}

                    <div class="md:flex gap-12">

                        <div class="lg:w-[35%]">
                            {{ form_label(form.name, 'Nom :', {
                            'label_attr': {
                                'class': 'noto text-color text-customGrey',
                                'data-toggle': 'tooltip',
                            }
                            }) }}
                            {{ form_errors(form.name) }}
                            {{ form_widget(form.name, { 
                                'attr': {
                                    'class': 'my-custom-class flex flex-column border border-borderGrey rounded-md p-2 mb-4 focus:outline-none focus:border-darkGrey w-full',
                                    'placeholder': 'Saisissez le nom du contributeur',
                                } 
                            }) }}
                        </div>

                        <div class="lg:w-[35%]">
                            {{ form_label(form.course, 'Matière :', {
                            'label_attr': {
                                'class': 'noto text-color text-customGrey',
                                'data-toggle': 'tooltip',
                            } 
                            }) }}
                            {{ form_errors(form.course) }}
                            {{ form_widget(form.course, { 
                                'attr': {
                                    'class': 'my-custom-class flex flex-column text-customGrey border border-borderGrey rounded-md p-2 mb-4 focus:outline-none focus:border-darkGrey w-full', 
                                } 
                            }) }}
                        </div>
                    </div>
                    <div class="flex gap-7 pt-3 pb-8">

                     <a href="{{ path('app_thematic') }}" class="font-semibold h-[45px] items-center flex justify-center text-sm bg-slate-100  font-noto text-fontGrey py-2 px-4 rounded hover:bg-slate-200 focus:outline-none focus:shadow-outline">&lt; Retour à la liste</a>

                    <div class="">
                         {{ form_widget(form.submit, { 
                        'label': 'Enregistrer',
                        'attr': {
                        'class': 'h-[45px] font-semibold items-center flex justify-center text-sm bg-slate-100 font-noto text-fontGrey py-2 px-4 rounded hover:bg-slate-200 focus:outline-none focus:shadow-outline',
                }
            }) }}
        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
