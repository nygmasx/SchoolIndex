{% extends 'base.html.twig' %}

{% block title %}Recherchez un exercice
{% endblock %}

{% block body %}
	<div class="flex w-full">
		{% include 'layout/_aside.html.twig' %}


		<div class="flex flex-col w-full">
			{% include 'layout/_top.html.twig' %}


			<div class="bg-slate-200 flex flex-col items-center  font-['Epilogue'] h-screen">
				<div class="w-full text-center lg:text-start">
					<h1 class="text-2xl	 md:text-4xl font-medium text-center lg:text-start text-blue-900 p-4">Rechercher un exercice</h1>
				</div>
				<div class="bg-white rounded-md w-[95%]	 md:w-[97%] mx-0 p-3 md:p-7">
					<div class="flex flex-col md:flex-row	gap-2	 ">
						<div class="flex flex-col text-gray-500 md:w-[25%]	">
							<p class="font-medium text-gray-600">Niveau :</p>
							<select name="niveau" id="niveau-exo" class="text-gray-500 rounded-md border-gray-300 border border-solid h-11	w-2/4 md:w-[95%]">
								<option value="collège">Collège</option>
								<option value="lycée">Lycée</option>
								<option value="bts">BTS</option>
								<option value="licence">Licence</option>
							</select>
						</div>
						<div class="flex flex-col text-gray-500 md:w-[25%]	">
							<p class="font-medium text-gray-600">Thématique :</p>
							<select name="thematique" id="thematique" class="text-gray-500 rounded-md border-gray-300 border border-solid h-11	w-2/4 md:w-[95%]">
								<option value="base">Analyse</option>
								<option value="lycée">Géométrie</option>
								<option value="bts">Probabilités et statistiques</option>
								<option value="licence">Suites</option>
							</select>
						</div>
						<div class="flex flex-col text-gray-500 md:w-[25%]	">
							<p class="font-medium text-gray-600">Mots clés :</p>
							<input class="text-gray-500 rounded-md border-gray-300 border border-solid h-11	w-3/4 p-2 outline-none md:w-[95%]"></input>
					</div>
					<div class="flex justify-center	mt-7 md:w-[25%]	">
						<button class=" bg-gray-100	 font-medium text-gray-600 rounded-md border-gray-300 border border-solid h-11	w-3/4 md:w-[65%]">Rechercher</button>
					</div>
				</div>

				<div class="mt-12">
					<p class="text-xl font-semibold	text-blue-900">3 exercices trouvés</p>
					<table class="w-full">
						<thead class="text-left h-12 bg-gray-200	">
							<tr>
								<th class="w-[30%]">Nom</th>
								<th>Difficultés</th>
								<th>Mots clés</th>
								<th>Durée</th>
								<th>Fichiers</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td class="w-30">Les suites suivantes sont-elles croissantes? Décroissantes?</td>
								<td>Niveau 8</td>
								<td>
									<span>arithmétique</span>
									<span>base</span>
								</td>
								<td>4h00</td>
								<td>
									<a href="#"><img src="assets/Vector.png" alt="Cliquer pour télécharger l'exercice"/>Exercice</a>
									<a href="#"><img src="assets/Vector.png" alt="Cliquer pour télécharger l'exercice"/>Corrigé</a>
								</td>
							</tr>
							<tr>
								<td class="w-30">Exercice sur une suite récurrente</td>
								<td>Niveau 9</td>
								<td>
									<span>réccurrence</span>
								</td>
								<td>1h00</td>
								<td>
									<a href="#"><img src="assets/Vector.png" alt="Cliquer pour télécharger l'exercice"/>Exercice</a>
									<a href="#"><img src="assets/Vector.png" alt="Cliquer pour télécharger l'exercice"/>Corrigé</a>
								</td>
							</tr>
							<tr>
								<td class="w-30">Le flocon de Van Koch</td>
								<td>Niveau 8</td>
								<td>
									<span>arithmétique</span>
								</td>
								<td>2h00</td>
								<td>
									<a href="#"><img src="assets/Vector.png" alt="Cliquer pour télécharger l'exercice"/>Exercice</a>
									<a href="#"><img src="assets/Vector.png" alt="Cliquer pour télécharger l'exercice"/>Corrigé</a>
								</td>
							</tr>
						</tbody>
					</table>

				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
